@model Snap_Bank.ViewModel.ForgetPasswordModel
@{
    ViewBag.Title = "ForgetPassword";
}
@section AddToHead
{
    <link href="@Url.Content("~/Content/ForgetPassword.css")" rel="stylesheet" type="text/css" />
}

<div class="pt-5 wrap-div">
    <div class="card border-0 shadow main-card">
        <div class="card-body">
            <div class="text-center mb-5 mt-5">
                <h2>Security Questions</h2>
            </div>
            @using (Html.BeginForm())
            {
                <div class="m-3">
                    <label for="bplace">User Name</label>
                    @Html.EditorFor(model => model.securityQuestions.username, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                    @Html.ValidationMessageFor(model => model.securityQuestions.username, "", new { @class = "text-danger" })
                </div>
                <div class="m-3">
                    <label for="bplace">What is your birth place?</label>
                    @Html.EditorFor(model => model.securityQuestions.birthPlace, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                    @Html.ValidationMessageFor(model => model.securityQuestions.birthPlace, "", new { @class = "text-danger" })
                </div>
                <div class="m-3">
                    <label for="bplace">What is your pet name?</label>
                    @Html.EditorFor(model => model.securityQuestions.petName, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                    @Html.ValidationMessageFor(model => model.securityQuestions.petName, "", new { @class = "text-danger" })
                </div>
                <div class="m-3">
                    <label for="bplace">What is your Favourite food?</label>
                    @Html.EditorFor(model => model.securityQuestions.FavouritFood, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                    @Html.ValidationMessageFor(model => model.securityQuestions.FavouritFood, "", new { @class = "text-danger" })
                </div>
                <div class="d-flex flex-row-reverse">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary mx-5">Verify</button>
                    </div>
                </div>
            }
            @using (Html.BeginForm())
            {
                <div class="m-3">
                    <label for="floatingTextarea">Password</label>
                    @Html.EditorFor(model => model.newPasswords.password, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                    @Html.ValidationMessageFor(model => model.newPasswords.password, "", new { Type = "password", @class = "text-danger" })
                </div>
                <div class="m-3">
                    <label for="floatingTextarea"> confirm Password</label>
                    @Html.EditorFor(model => model.newPasswords.confirmpassword, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                    @Html.ValidationMessageFor(model => model.newPasswords.confirmpassword, "", new { Type = "password", @class = "text-danger" })

                </div>
                <div class="text-center mt-4 mb-2 d-flex flex-row-reverse mx-5">
                    <button type="submit" class="btn btn-primary mb-3">Submit</button>
                </div>
            }
        </div>
    </div>
</div>

